<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <%- include('./partials/style') %>
        <%- include('../styles/main') %>
    </head>
    <body>
        <div class="m-b-xs">
            <span class="bold" style="font-size: 16px;">CONTAS A RECEBER</span>
        </div>
        <div>
            <% if (data.header) { %>
                <table class="table-header">
                    <tr>
                        <td>
                            <div>
                                <p class="text m-b-sm">Total do Período</p>
                                <p class="text-value"><%= utils.moneyFormat(header.total) %></p>
                            </div>
                        </td>
                        <td>
                            <div>
                                <p class="text m-b-sm">Em aberto</p>
                                <p class="text-value"><%= header.qntAberto %></p>
                            </div>
                        </td>
                        <td>
                            <div>
                                <p class="text m-b-sm">Atrasadas</p>
                                <p class="text-value"><%= header.qntVencido %></p>
                            </div>
                        </td>
                        <td>
                            <div>
                                <p class="text m-b-sm">Sem Boleto</p>
                                <p class="text-value"><%= header.qntSemBoleto %></p>
                            </div>
                        </td>
                    </tr>
                </table>
            <% } %>
            <hr class="p-b-xs" style="border: none; border-top: 1px solid #E5E5E5; padding-top: 20px;" />
            <table class="table-dataset nowrap">
                <thead>
                    <tr>
                        <th class="left">Status</th>
                        <th class="left">Cliente</th>
                        <th>Vencimento</th>
                        <th>Parcelas</th>
                        <th class="right">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <% (data.items || []).forEach(item => { %>
                        <tr class="<%- (({atrasado: 'danger', vencido: 'danger', pago: 'weak'})?.[item?.statusPedido?.toLowerCase()] || '') %>">
                            <td class="left uppercase bold"><%= item.statusPedido %></td>
                            <td class="left" style="color: #171717;"><%= item.nomeCliente %></td>
                            <td class="center"><%= utils.dateFormatBR(item.dataVencto) %></td>
                            <td class="center"><%= item.parcela?.split(':')?.[1]?.trim() %></td>
                            <td class="right medium"><%= utils.moneyFormat(item.cre_valor) %></td>
                        </tr>
                    <% }) %>
                </tbody>
                <tfoot>
                    <tr>
                        <td class="left">TOTAL</td>
                        <td class="left">—</td>
                        <td class="center">—</td>
                        <td class="center">—</td>
                        <td class="right"><%= data.items ? utils.moneyFormat((data.items || []).reduce((s, i) => s + i.cre_valor, 0) || 0) : '—' %></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </body>
</html>
